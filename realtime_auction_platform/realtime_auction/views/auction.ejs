<!DOCTYPE html>
<html lang="Korean">
<head>
   <% include ./head.ejs %>
</head>

<body>

<div class="super_container">

	<!-- Header -->
	<% include ./header.ejs %>

	<!-- Single Product -->

	<div class="single_product">
		<div class="container">
			<div class="row">

		<!-- Images -->

				<div class="col-lg-5 order-lg-2 order-1">
					<% if (item.buyerId) { %>
						<div class="image_selected"><img src="/images/soldout.png" style="max-width: 80%; height: auto;" alt=""></div>
					<% }else { %>
							<div class="image_selected"><img src="/img/<%= item.img %>" style="max-width: 80%; height: auto;" alt=""></div>
						<% } %>
				</div>

				<!-- Description -->
				<div class="col-lg-5 order-3">
					<div class="product_description">
						<div class="product_name"><%= item.name %></div>
						<div class="product_seller">판매자 : <%= item.seller.name %></div>
						<div class="product_text">아이템 설명: <%= item.des %></p></div>
							<div class="product_start">경매 시작: <%= item.createdAt%></div>
              <div class="product_time" data-start ="<%= item.createdAt %>" data-finish = "<%= item.finish %>" >남은 시간: <span>00:00:00</span></div>
               <div class="product_price">Start price: <%= item.price %></div>
					<div class="order_info d-flex flex-row">
                <form id='bid_form' method = "post" enctype="multipart/form-data">
                   <div id = 'child1' class="form-group">
                   	<label for="StartPrice">입찰가</label>
                     <input type="number" class="form-control" name='bid' placeholder="입찰가" min = "<%= item.price%>" required>
                    </div>
					<div id = 'child2' class="form-group text-center">
                      <button type="submit" class="btn btn-info">입찰<i class="fa fa-check spaceLeft"></i></button>
                    </div>
                 </form>
						</div>
						<div id="bid">
								<% auction.forEach(function(bid){ %>
									<div class="product_text">
										<span><%= bid.user.name %> :님 </span>
										<span><%= bid.bid%>원에 입찰하였습니다.</span>
									</div>
									<%});%>
						</div>	
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
	<!-- Footer -->
	<% include ./footer.ejs %>
	<!-- Copyright -->

</div>

<script src = "/socket.io/socket.io.js"></script>

<script>
document.querySelector('#bid_form').addEventListener('submit', function(e){
	e.preventDefault();
	var xhr = new XMLHttpRequest();
	xhr.onload = function() {
		if(xhr.status===200) {
			e.target.bid.value = '';
			errorMessage.textContent='';
		}else{
			console.error(xhr.responseText);
			e.target.bid.value='';
			errorMessage.textContent = xhr.responseText;
		}
	};
	xhr.open('POST', '/item/<%= item.id%>/bid');
	xhr.setRequestHeader('Content-Type', 'application/json');
	xhr.send(JSON.stringify({
		bid:e.target.bid.value,
	}));
});

var socket = io.connect('http://localhost:3000',{ 
	path: '/socket.io'
});
socket.on('bid', function (data) {
      var div = document.createElement('div');
      var spanName = document.createElement('span');
			spanName.textContent = data.name + '님: ';
      var spanBid = document.createElement('span');
      spanBid.textContent = data.bid + '원에 입찰하셨습니다.';
      div.appendChild(spanName);
      div.appendChild(spanBid);
      document.querySelector('#bid').appendChild(div);
		});
socket.on('timecount', function(count){
	var time = document.querySelector('.product_time');
	var finish = new Date(time.dataset.start);
	var serverTime = new Date(parseInt(count, 10));
	finish.setMinutes(finish.getMinutes() + parseInt(time.dataset.finish, 10));
	if(serverTime >= finish)
	{
		var timeDiv = document.querySelector('.product_time');
		timeDiv.querySelector('span').textContent = '종료된 경매입니다';
		socket.emit('finishTime');
		console.log('finish');
		var bidForm = document.querySelector('#bid_form');
		var child1  = document.querySelector('#child1');
		var child2 = document.querySelector('#child2');

		bidForm.removeChild(child1);
		bidForm.removeChild(child2);
		
	}else{
		var t = finish - serverTime;
		var seconds = ('0' + Math.floor((t / 1000) % 60)).slice(-2);
    	var minutes = ('0' + Math.floor((t / 1000 / 60) % 60)).slice(-2);
		var hours = ('0' + Math.floor((t / (1000 * 60 * 60)) % 24)).slice(-2);
		var timeDiv = document.querySelector('.product_time');
		timeDiv.querySelector('span').textContent = hours + ':' + minutes + ':' + seconds;
	}
});



</script>

<script src="/js/jquery-3.3.1.min.js"></script>
<script src="/styles/bootstrap4/popper.js"></script>
<script src="/styles/bootstrap4/bootstrap.min.js"></script>
<script src="/plugins/greensock/TweenMax.min.js"></script>
<script src="/plugins/greensock/TimelineMax.min.js"></script>
<script src="/plugins/scrollmagic/ScrollMagic.min.js"></script>
<script src="/plugins/greensock/animation.gsap.min.js"></script>
<script src="/plugins/greensock/ScrollToPlugin.min.js"></script>
<script src="/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
<script src="/plugins/easing/easing.js"></script>
<script src="/js/product_custom.js"></script>
</body>

</html>
